  "version": "0.2.0",
  "configurations": [
    {
      "name": "app local",
      "request": "launch",
      "type": "dart",
      "args": ["--dart-define-from-file", "lib/env/.local.env"],
      "cwd": "app"
    },
    {
      "name": "app local (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "args": ["--dart-define-from-file", "lib/env/.local.env"],
      "cwd": "app"
    },
    {
      "name": "app dev",
      "request": "launch",
      "type": "dart",
      "args": ["--dart-define-from-file", "lib/env/.dev.env"],
      "cwd": "app"
    },
    {
      "name": "app dev (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "args": ["--dart-define-from-file", "lib/env/.dev.env"],
      "cwd": "app"
    },
    {
      "name": "app prod",
      "request": "launch",
      "type": "dart",
      "args": ["--dart-define-from-file", "lib/env/.prod.env"],
      "cwd": "app"
    },
    {
      "name": "app prod (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "args": ["--dart-define-from-file", "lib/env/.prod.env"],
      "cwd": "app"
    },
    {
      "name": "app prod (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": ["--dart-define-from-file", "lib/env/.prod.env"],
      "cwd": "app"
    },
    {
      "name": "app widgetbook",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "cwd": "widgetbook"
    }
  ]
}
